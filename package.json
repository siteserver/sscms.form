{
  "name": "form",
  "displayName": "自定义表单插件",
  "description": "SSCMS 自定义表单插件是简单高效的电子表单工具，实现轻松快捷的表单制作",
  "version": "1.0.13",
  "license": "AGPL-3.0",
  "publisher": "sscms",
  "engines": {
    "sscms": "^7.0.10"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "表单",
    "Form",
    "自定义模板"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/siteserver/sscms.form"
  },
  "icon": "/assets/form/logo.svg",
  "output": "",
  "main": "SSCMS.Form.dll",
  "applyToSites": true,
  "applyToChannels": false,
  "extensions": {
    "permissions": {
      "form_forms": {
        "text": "表单管理",
        "type": ["web", "wx"]
      },
      "form_templates": {
        "text": "表单模板",
        "type": ["web", "wx"]
      }
    },
    "menus": {
      "form_site_all": {
        "text": "表单",
        "iconClass": "ion-android-list",
        "type": ["web", "wx"],
        "permissions": [
          "form_forms",
          "form_templates"
        ],
        "menus": {
          "form_forms": {
            "text": "表单管理",
            "link": "/ss-admin/form/forms/",
            "permissions": ["form_forms"],
            "order": 1
          },
          "form_templates": {
            "text": "表单模板",
            "link": "/ss-admin/form/templates/?type=submit",
            "permissions": ["form_templates"],
            "order": 2
          }
        }
      }
    },
    "tables": {
      "sscms_form": {
        "columns": [
          {
            "attributeName": "SiteId",
            "dataType": "Integer"
          },
          {
            "attributeName": "Title",
            "dataType": "VarChar"
          },
          {
            "attributeName": "Description",
            "dataType": "VarChar",
            "dataLength": 2000
          },
          {
            "attributeName": "Taxis",
            "dataType": "Integer"
          },
          {
            "attributeName": "IsReply",
            "dataType": "Boolean"
          },
          {
            "attributeName": "RepliedCount",
            "dataType": "Integer"
          },
          {
            "attributeName": "TotalCount",
            "dataType": "Integer"
          }
        ]
      },
      "sscms_form_data": {
        "columns": [
          {
            "attributeName": "FormId",
            "dataType": "Integer"
          },
          {
            "attributeName": "IsReplied",
            "dataType": "Boolean"
          },
          {
            "attributeName": "ReplyDate",
            "dataType": "DateTime"
          },
          {
            "attributeName": "ReplyContent",
            "dataType": "Text"
          }
        ]
      }
    }
  }
}